# Production Environment Configuration
# Copy this file to .env and update with your actual values

# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-base64-32
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-vps-ip,your-domain.com,www.your-domain.com

# Database Configuration (MySQL)
DB_ENGINE=django.db.backends.mysql
DB_NAME=fleetguard_db
DB_USER=fleetguard_user
DB_PASSWORD=your-strong-database-password-here
DB_ROOT_PASSWORD=your-strong-root-password-here
DB_HOST=db
DB_PORT=3306

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-specific-password

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://your-vps-ip,http://your-domain.com,https://your-domain.com

# Gunicorn Configuration
GUNICORN_WORKERS=2
GUNICORN_THREADS=2
LOG_LEVEL=info

# Timezone
TZ=Asia/Kolkata
